{
	"env": {
		"browser": true,
		"es2021": true,
		"node": true
	},
	"extends": [
		"plugin:react/recommended",
		"airbnb",
		"prettier"
	],
	"overrides": [],
	"parserOptions": {
		"ecmaVersion": "latest",
		"sourceType": "module"
	},
	"plugins": [
		"react"
	],
	"rules": {
		"react/function-component-definition": [
			2,
			{
				"namedComponents": [
					"arrow-function",
					"function-declaration"
				]
			}
		],
		"arrow-body-style": [
			"error",
			"always"
		],
		"jsx-a11y/label-has-associated-control": [
			2,
			{
			  "labelAttributes": ["htmlFor"]
			}
		],
		// tmp rules. plan to use Typescript
		"react/prop-types": 1,
		"react/button-has-type": 1
	}
}